# Reynolds Core Configuration
# Environment variables for the Reynolds Orchestrator

# Core Orchestration Settings
ORCHESTRATOR_MODE=development
AGENT_POOL_SIZE=6
LOG_LEVEL=info
NODE_ENV=development

# MCP Server Configuration
MCP_PORT=8080
MCP_HOST=0.0.0.0
MCP_PROTOCOL_VERSION=2024-11-05
MCP_CONNECTION_TIMEOUT=30s
MCP_REQUEST_TIMEOUT=60s
MCP_MAX_CONCURRENT_REQUESTS=50

# Reynolds Personality Settings
REYNOLDS_PERSONALITY=maximum_effort
REYNOLDS_WISDOM_ENABLED=true
REYNOLDS_CHARM_FACTOR=maximum
REYNOLDS_DEADPOOL_MODE=true

# Orchestration Features
LOOP_PREVENTION_ENABLED=true
LOOP_PREVENTION_THRESHOLD=0.999
PARALLEL_EXECUTION_PREFERRED=true
TASK_DECOMPOSITION_ENABLED=true
INTELLIGENT_AGENT_SELECTION=true

# Integration Settings
GITHUB_ISSUES_INTEGRATION=enabled
GITHUB_API_VERSION=2022-11-28
WEBHOOK_VERIFICATION_ENABLED=true

# Performance Tuning
MEMORY_OPTIMIZATION=true
CACHE_ENABLED=true
CACHE_TTL=3600
METRICS_ENABLED=true
METRICS_INTERVAL=30s
HEALTH_CHECK_INTERVAL=30s

# Database Settings
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30s
DB_QUERY_TIMEOUT=60s
DB_RETRY_ATTEMPTS=3

# Redis Settings
REDIS_CONNECTION_POOL_SIZE=10
REDIS_CONNECTION_TIMEOUT=5s
REDIS_COMMAND_TIMEOUT=30s
REDIS_RETRY_ATTEMPTS=3

# Security Settings
SECURITY_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_MAX_REQUESTS=100
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring and Observability
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics
TRACING_ENABLED=false
LOGGING_FORMAT=json
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Agent Communication
AGENT_HEARTBEAT_INTERVAL=30s
AGENT_TIMEOUT=120s
AGENT_RETRY_ATTEMPTS=3
AGENT_LOAD_BALANCING=round_robin
AGENT_HEALTH_CHECK_ENABLED=true

# Task Processing
TASK_QUEUE_SIZE=1000
TASK_TIMEOUT=300s
TASK_RETRY_ATTEMPTS=3
TASK_PRIORITY_ENABLED=true
CONCURRENT_TASK_LIMIT=50

# Experimentation Framework
EXPERIMENTATION_ENABLED=true
EXPERIMENT_TIMEOUT=600s
A_B_TESTING_ENABLED=true
PERFORMANCE_COMPARISON_ENABLED=true

# Development Settings (Override in production)
DEBUG_ENABLED=false
HOT_RELOAD=false
DEVELOPMENT_TOOLS_ENABLED=false
MOCK_EXTERNAL_SERVICES=false