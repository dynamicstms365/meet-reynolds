# Agent Configuration
# Environment variables for all agent types (DevOps, Platform, Code Intelligence)

# Agent Startup and Lifecycle
AGENT_STARTUP_TIMEOUT=120s
AGENT_SHUTDOWN_TIMEOUT=60s
AGENT_RESTART_POLICY=on-failure
AGENT_RESTART_MAX_ATTEMPTS=3
AGENT_HEALTH_CHECK_INTERVAL=30s
AGENT_READINESS_TIMEOUT=60s

# Agent Communication with Reynolds
MCP_CONNECTION_TIMEOUT=30s
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=5s
MCP_HEARTBEAT_INTERVAL=30s
MCP_MAX_MESSAGE_SIZE=10MB
MCP_COMPRESSION_ENABLED=true

# Agent Memory and Learning
AGENT_MEMORY_PERSISTENCE=true
AGENT_MEMORY_CLEANUP_INTERVAL=24h
AGENT_MEMORY_MAX_SIZE=1GB
AGENT_LEARNING_ENABLED=true
AGENT_PATTERN_RECOGNITION=true
AGENT_KNOWLEDGE_SHARING=true

# Agent Performance
AGENT_CONCURRENCY_LIMIT=10
AGENT_QUEUE_SIZE=100
AGENT_TASK_TIMEOUT=300s
AGENT_IDLE_TIMEOUT=600s
AGENT_CPU_THROTTLING=false
AGENT_MEMORY_LIMIT_SOFT=1GB
AGENT_MEMORY_LIMIT_HARD=2GB

# Agent Security
AGENT_SANDBOX_MODE=true
AGENT_NETWORK_ISOLATION=partial
AGENT_FILE_ACCESS_RESTRICTED=true
AGENT_EXECUTION_TIMEOUT=600s
AGENT_SECURITY_SCAN_ENABLED=true

# Agent Logging and Monitoring
AGENT_LOG_LEVEL=info
AGENT_LOG_FORMAT=json
AGENT_METRICS_ENABLED=true
AGENT_METRICS_INTERVAL=30s
AGENT_TRACE_ENABLED=false
AGENT_AUDIT_ENABLED=true

# DevOps Agent Specific Settings
DEVOPS_AGENT_GITHUB_API_RATE_LIMIT=5000
DEVOPS_AGENT_AZURE_TIMEOUT=300s
DEVOPS_AGENT_DOCKER_SOCKET_ENABLED=true
DEVOPS_AGENT_K8S_CONFIG_AUTO_DETECT=true
DEVOPS_AGENT_TERRAFORM_CACHE_ENABLED=true
DEVOPS_AGENT_CI_CD_INTEGRATION=true
DEVOPS_AGENT_INFRASTRUCTURE_SCANNING=true

# Platform Agent Specific Settings
PLATFORM_AGENT_M365_API_TIMEOUT=120s
PLATFORM_AGENT_POWERPLATFORM_TIMEOUT=180s
PLATFORM_AGENT_TENANT_VALIDATION=true
PLATFORM_AGENT_COMPLIANCE_CHECK=true
PLATFORM_AGENT_SOLUTION_TEMPLATES_ENABLED=true
PLATFORM_AGENT_DATAVERSE_INTEGRATION=true
PLATFORM_AGENT_POWERSHELL_EXECUTION=true

# Code Intelligence Agent Specific Settings
CODE_AGENT_LANGUAGE_DETECTION=auto
CODE_AGENT_STATIC_ANALYSIS=true
CODE_AGENT_SECURITY_SCAN=true
CODE_AGENT_PERFORMANCE_ANALYSIS=true
CODE_AGENT_TEST_GENERATION=true
CODE_AGENT_DOCUMENTATION_GENERATION=true
CODE_AGENT_REFACTORING_SUGGESTIONS=true
CODE_AGENT_DEPENDENCY_ANALYSIS=true
CODE_AGENT_VULNERABILITY_SCANNING=true

# Agent Scaling and Load Balancing
AGENT_AUTO_SCALING=true
AGENT_SCALE_UP_THRESHOLD=80
AGENT_SCALE_DOWN_THRESHOLD=30
AGENT_MIN_REPLICAS=1
AGENT_MAX_REPLICAS=10
AGENT_SCALE_COOLDOWN=300s
AGENT_LOAD_BALANCING_STRATEGY=least_loaded

# Agent External Tool Integration
AGENT_TOOL_TIMEOUT=300s
AGENT_TOOL_RETRY_ATTEMPTS=3
AGENT_TOOL_CACHE_ENABLED=true
AGENT_TOOL_CACHE_TTL=3600s
AGENT_TOOL_EXECUTION_ISOLATION=true

# Agent Workspace Management
AGENT_WORKSPACE_CLEANUP=true
AGENT_WORKSPACE_SIZE_LIMIT=5GB
AGENT_WORKSPACE_BACKUP=true
AGENT_WORKSPACE_ENCRYPTION=false
AGENT_TEMP_FILE_CLEANUP=true

# Agent Error Handling and Recovery
AGENT_ERROR_RECOVERY=true
AGENT_CIRCUIT_BREAKER_ENABLED=true
AGENT_CIRCUIT_BREAKER_THRESHOLD=5
AGENT_CIRCUIT_BREAKER_TIMEOUT=60s
AGENT_FALLBACK_STRATEGY=graceful_degradation

# Agent Development Settings
AGENT_HOT_RELOAD=false
AGENT_DEBUG_MODE=false
AGENT_PROFILING_ENABLED=false
AGENT_MOCK_EXTERNAL_APIS=false
AGENT_VERBOSE_LOGGING=false

# Agent Collaboration
AGENT_PEER_COMMUNICATION=true
AGENT_KNOWLEDGE_SYNC=true
AGENT_COLLABORATIVE_TASKS=true
AGENT_SKILL_SHARING=true
AGENT_WORKLOAD_DISTRIBUTION=true

# Agent Quality Assurance
AGENT_SELF_VALIDATION=true
AGENT_OUTPUT_VERIFICATION=true
AGENT_QUALITY_METRICS=true
AGENT_PERFORMANCE_BENCHMARKING=true
AGENT_CONTINUOUS_IMPROVEMENT=true