{
  "mcpServers": {
    "copilot-github-bot": {
      "type": "streamable-http",
      "url": "http://localhost:5003/mcp",
      "headers": {
        "Content-Type": "application/json",
        "User-Agent": "ReynoldsEnterpriseAgent/1.0",
        "X-GitHub-Token": "${env:GITHUB_TOKEN}"
      },
      "alwaysAllow": [
        "SearchSemantic",
        "GetDiscussion",
        "GetIssue",
        "SearchDiscussions",
        "SearchIssues",
        "CreateDiscussion",
        "CreateIssue",
        "AnalyzeOrganizationDiscussions",
        "AnalyzeOrganizationIssues",
        "ProcessPromptAction",
        "AddComment",
        "UpdateContent",
        "AnalyzeDependencies",
        "AnalyzeOrgProjects",
        "AssessProjectHealth",
        "CoordinateStakeholders",
        "OrchestrateCrossRepo",
        "SearchRepositories"
      ],
      "disabled": false
    }
  }
}