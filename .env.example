# Power Platform Copilot Agent Environment Configuration
# Copy this file to .env and configure your values

# GitHub App Configuration
NGL_DEVOPS_APP_ID=your_github_app_id
NGL_DEVOPS_PRIVATE_KEY_PATH=./app.pem
NGL_DEVOPS_WEBHOOK_SECRET=your_webhook_secret

# Power Platform Configuration
POWER_PLATFORM_TENANT_ID=your_tenant_id
POWER_PLATFORM_CLIENT_ID=your_client_id
POWER_PLATFORM_CLIENT_SECRET=your_client_secret

# Microsoft 365 Configuration
M365_TENANT_ID=your_m365_tenant_id
M365_CLIENT_ID=your_m365_client_id
M365_CLIENT_SECRET=your_m365_client_secret

# Development Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:8080
DOTNET_CLI_TELEMETRY_OPTOUT=1

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# Codespace Configuration
CODESPACE_NAME=${CODESPACE_NAME}
GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN=${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}